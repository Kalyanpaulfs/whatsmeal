rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to restaurant status
    match /restaurant/status {
      allow read: if true;
      allow write: if true; // For now, allow all writes (you can restrict this later)
    }
    
    // Allow public read access to menu data
    match /menu/{document} {
      allow read: if true;
      allow write: if true; // For now, allow all writes (you can restrict this later)
    }
    
    // Allow public read access to orders (for admin viewing)
    match /orders/{document} {
      allow read: if true;
      allow write: if true; // For now, allow all writes (you can restrict this later)
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
